.container
  %h1 Theses

  %table.table
    %tr
      %th Issue
      %th Summary
      %th Text
      %th Author
      %th
      %th
      %th

    - @theses.each do |thesis|
      %tr
        %td= link_to thesis.issue.title, thesis.issue
        %td= thesis.summary
        %td= thesis.text
        %td= link_to thesis.author.display, thesis.author
        %td= link_to 'Show', thesis
        %td= link_to 'Edit', edit_thesis_path(thesis)
        %td= link_to 'Destroy', thesis, :method => :delete, :data => { :confirm => 'Are you sure?' }

  = link_to 'New Thesis', new_thesis_path, class: [:btn, :'btn-default']
